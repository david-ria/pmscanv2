# =============================================================================
# PULL ROBOT CONFIGURATION - DATABASE-DIRECT VERSION
# =============================================================================
# Copy this file to .env and configure your environment variables

# =============================================================================
# MANDATORY SUPABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# =============================================================================
# ATM API CONFIGURATION
# =============================================================================
DASHBOARD_ENDPOINT=https://api.atm.ovh/api/v3.0/measurements
DASHBOARD_BEARER=your-atm-api-bearer-token

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000

# =============================================================================
# DEVICE CONFIGURATION
# =============================================================================
ALLOW_DEVICE_IDS=PMScan3376DF
UNKNOWN_DEVICE_BEHAVIOR=skip

# =============================================================================
# DATABASE POLLING & RATE LIMITING
# =============================================================================
POLL_INTERVAL_MS=300000
RATE_MAX_RPS=20

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
MAX_ATTEMPTS=6
BATCH_SIZE=200

# =============================================================================
# METRICS CONFIGURATION - WITH GEOLOCATION
# =============================================================================
INCLUDE_METRICS=pm1,pm25,pm10,latitude,longitude
UNITS_JSON={"pm1":"ugm3","pm25":"ugm3","pm10":"ugm3","latitude":"degrees","longitude":"degrees"}